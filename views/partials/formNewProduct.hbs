<html>

  <header>

    <h1 style="color:blue;">Productos</h1>
  </header>
  <body>

    <main>
      <div class="container mt-3">
        <div class="jumbotron">
          <h2 style="color:blue;">Nuevo producto</h2>
          <br />
          <form action="http://localhost:8080/products" method="post">
            <div class="form-group">
              <label for="title"><b>Nombre</b></label>
              <input
                id="title"
                class="form-control"
                type="text"
                name="title"
                required
              />
            </div>
            <div class="form-group">
              <label for="price"><b>Precio</b></label>
              <input
                id="price"
                class="form-control"
                type="number"
                name="price"
                min="1"
                step="0.01"
                required
              />
            </div>
            <div class="form-group">
              <label for="thumbnail"><b>Url de imagen</b></label>
              <input
                id="thumbnail"
                class="form-control"
                type="url"
                name="thumbnail"
                required
              />
            </div>
            <button class="btn btn-success mt-3 mb-5">Enviar</button>
            <footer>
              <a href="/products">Ver lista de productos</a>
            </footer><footer>
              <a href="/products-test">Ver lista de productos aleatorios</a>
            </footer>
          </form>

        </div>
      </div>
    </main>
    <aside>
      <div id="products">
        <h3>Lista de productos</h3>
        <div class="table-responsive">
          <table class="table table-dark" id="tableOfProducts">
            <thead><tr style="color: yellow;">
                <th>Nombre</th>
                <th>Precio</th>
                <th>Thumbnail</th>
              </tr></thead>
            <tbody id="tbproducts"></tbody>
          </table>
        </div>
      </div>
      <hr />

    </aside>

  </body>
  <script
    src="https://cdn.jsdelivr.net/npm/normalizr@3.6.1/dist/normalizr.browser.min.js"
  ></script>
  <script src="/js/function.js"></script>

</html>